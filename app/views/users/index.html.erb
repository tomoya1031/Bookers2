<div class="container">
<%= render 'books/sidebar', book: @book %>
            <h2>Users</h2>
            <table class="table table-hover">
			    <thead>
				    <tr>
					    <th>image</th>
					    <th>name</th>
					    <th></th>
				    </tr>
			    </thead>
				<% @users.each do |user| %>
			        <tbody>
				        <tr>
					        <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %></td>
						    <td>
						        <%= user.name %>
					        </td>
					        <td>
					        	<%= link_to "Show", user_path(user) ,class: "list-aitem" %>
					        </td>
				        </tr>
			        </tbody>
				<% end %>
			</table>
        </div>
    </div>
</div>